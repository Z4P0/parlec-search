      <p class="parts-name">{{data.name}}</p>
      <table class="results-table">
        <caption>Click on a part to view more information</caption>
        <tr>
          <th>Part Number<br/>with Thru Coolant</th>
          <th>Part Number<br/>with AD/B Coolant</th>
          <th>B</th>
          <th>C</th>
          <th>Socket Depth</th>
          <th>Collet Nut (incl.)</th>
          <th>Nut Torque</th>
          <th>B/u Screw Left Hand</th>
        </tr>

        <tr>
          {{#if data.part_number_with_thru_coolant}}
          <td class="alt">{{data.part_number_with_thru_coolant}}</td>
          {{else}} <td class="alt">&mdash;</td>
          {{/if}}

          {{#if data.part_number_with_ADB_coolant}}
          <td>{{data.part_number_with_ADB_coolant}}</td>
          {{else}} <td>&mdash;</td>
          {{/if}}

          {{#if data.B}}
          <td class="alt">{{data.B}}</td>
          {{else}} <td class="alt">&mdash;</td>
          {{/if}}

          {{#if data.C}}
          <td>{{data.C}}</td>
          {{else}} <td>&mdash;</td>
          {{/if}}

          {{#if data.socket_depth}}
          <td class="alt">{{data.socket_depth}}</td>
          {{else}} <td class="alt">&mdash;</td>
          {{/if}}

          {{#if data.collet_nut}}
          <td>{{data.collet_nut}}</td>
          {{else}} <td>&mdash;</td>
          {{/if}}

          {{#if data.nut_torque}}
          <td class="alt">{{data.nut_torque}}</td>
          {{else}} <td class="alt">&mdash;</td>
          {{/if}}

          {{#if data.BU_screw_left_hand}}
          <td>{{data.BU_screw_left_hand}}</td>
          {{else}} <td>&mdash;</td>
          {{/if}}

        </tr>
      </table>
