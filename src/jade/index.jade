    include _scripts.jade
    //- handlebar templates
    script#option-tpl(type="text/x-handlebars-template").
      <option value="" disabled selected>Select your option</option>
      {{#if options}}
      {{#each options}}
      <option data-index="{{@index}}" value="{{name}}">{{name}}</option>
      {{/each}}
      {{else}}
      <option value="">&nbsp;</option>
      {{/if}}

    script#results-tpl(type="text/x-handlebars-template").
